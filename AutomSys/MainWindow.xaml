<Window x:Class="AutomSys.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AutomSys"
        mc:Ignorable="d"
        Title="MainWindow" Height="516" Width="900"
        ResizeMode="NoResize" Loaded="Window_Loaded">


    <Grid Margin="10,0,10,9">
        <Grid Margin="7,10,312,67">

            <Image x:Name="bg" Margin="16,19,16,19" Source="Images/bg.png"/>
            <Image x:Name="Automate1" Margin="66,87,426,218" Source="Images/green.png" MouseDown="Image_MouseDown" />
            <Image x:Name="Automate2" Margin="298,87,194,218" Source="Images/green.png" MouseDown="Image_MouseDown" />
            <Image x:Name="Automate3" Margin="66,227,426,78" Source="Images/green.png" MouseDown="Image_MouseDown" />
            <Image x:Name="Automate4" Margin="298,227,194,78" Source="Images/green.png" MouseDown="Image_MouseDown" />
            <Button Content="Заполнить" HorizontalAlignment="Left" Height="21" Margin="176,268,0,0" VerticalAlignment="Top" Width="64" Click="Button_Click_3"/>
            <Button Content="Заполнить" HorizontalAlignment="Left" Height="21" Margin="176,131,0,0" VerticalAlignment="Top" Width="64" Click="Button_Click_1"/>
            <Button Content="Заполнить" HorizontalAlignment="Left" Height="21" Margin="412,131,0,0" VerticalAlignment="Top" Width="64" Click="Button_Click_2"/>
            <Button Content="Заполнить" HorizontalAlignment="Left" Height="21" Margin="412,268,0,0" VerticalAlignment="Top" Width="64" Click="Button_Click_4"/>
            <Label x:Name="Label1" Content="Пусто!" HorizontalAlignment="Left" Height="24" Margin="176,102,0,0" VerticalAlignment="Top" Width="78" Foreground="Red"/>
            <Label x:Name="Label3" Content="Пусто!" HorizontalAlignment="Left" Height="24" Margin="176,239,0,0" VerticalAlignment="Top" Width="78" Foreground="Red"/>
            <Label x:Name="Label2" Content="Пусто!" HorizontalAlignment="Left" Height="24" Margin="412,102,0,0" VerticalAlignment="Top" Width="78" Foreground="Red"/>
            <Label x:Name="Label4" Content="Пусто!" HorizontalAlignment="Left" Height="24" Margin="412,239,0,0" VerticalAlignment="Top" Width="78" Foreground="Red"/>



        </Grid>

        <Button x:Name="StartSimulationButton" Content="Запустить симуляцию" HorizontalAlignment="Left" Margin="10,429,0,0" VerticalAlignment="Top" Click="Button_Click" Width="153" Height="33"/>
        <DataGrid x:Name="Grid" HorizontalAlignment="Left" Height="120" Margin="573,69,0,0" VerticalAlignment="Top" Width="255" d:ItemsSource="{d:SampleData ItemCount=5}" IsReadOnly="True">
            <DataGrid.Resources>
                <Style TargetType="{x:Type DataGridCell}">
                    <EventSetter Event="MouseDoubleClick" Handler="DataGridCell_MouseDoubleClick"/>
                </Style>
            </DataGrid.Resources>
        </DataGrid>
        <Label x:Name="TimeText" HorizontalAlignment="Left" Margin="573,34,0,0" VerticalAlignment="Top" Width="255" Height="30"/>
        <DataGrid x:Name="EventGrid" HorizontalAlignment="Left" Height="120" Margin="574,194,0,0" VerticalAlignment="Top" Width="254" d:ItemsSource="{d:SampleData ItemCount=5}" IsReadOnly="True"/>
        <Button x:Name="StopSimulationButton" Content="Остановить симуляцию" HorizontalAlignment="Left" Margin="168,429,0,0" VerticalAlignment="Top" Click="Button_Click" Width="153" Height="33" IsEnabled="False"/>

    </Grid>
</Window>
